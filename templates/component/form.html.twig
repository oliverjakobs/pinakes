<form action="{{ path(name ~ '_form', { id: entity.id }) }}" method="post">
  <div class="show-table">
  {% for name, field in fields %}
    {% set form = render_form(name, field, entity) %}
    {% if form is not empty %}
      <div><label for="{{ name }}">{{ field.caption }}:</label></div>
      <div>{{ form | raw }}</div>
    {% endif %}
  {% endfor %}
  </div>
  <input class="button" type="submit" value="Submit">
  <a class="button" href="{{ path(name ~ '_show', { id: entity.id }) }}">Cancel</a>
</form>
