{% extends "modals/modal.html.twig" %}

{% block modal_caption %}
    <h1>New {{ type }}</h1>
{% endblock %}

{% block modal_content %}

<form class="transaction-form"  hx-post="/bookfund/modal/{{ type }}">
    <input type="number" step="0.01" id="amount" name="amount" placeholder="0.00" required>
    <label for="reason">Reason for Transaction:</label>
    <input type="text" id="reason" name="reason" placeholder="Enter reason for the transaction" required>
    <div>
        <button type="button" _="on click trigger closeModal">Cancel</button>
        <button type="submit">Submit</button>
    </div>
</form>

{% endblock %}
