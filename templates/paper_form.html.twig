{% extends "base.html.twig" %}

{% block title %}
  Pinakes - New Entry
{% endblock %}

{% block content %}

<div class="form-container">
  <h1 class="form-heading">Add new paper</h1>
  {{ form_start(form) }}
    <div class="form-row">
    {{ form_row(form.title) }}
    </div>
    
    <div class="form-row">
      {{ form_row(form.authors, {'label': 'Author(s)'}) }}
    </div>

    <div class="form-row">
      {{ form_row(form.releaseYear) }}
      {{ form_row(form.doi, {'label': 'DOI'}) }}
    </div>

    <div class="form-row">
      {{ form_row(form.submit, {'label': 'Add'}) }}
    </div>

    {{ form_rest(form) }}
  {{ form_end(form) }}
</div>
{% endblock %}
