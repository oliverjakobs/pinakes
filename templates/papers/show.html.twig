{% extends "_base.html.twig" %}

{% block title %}
  Pinakes - {{ paper.title }}
{% endblock %}

{% block content %}
<div class="detail">
  <h1>{{ paper.title }} ({{paper.releaseYear}})</h1>
  <p>Author(s):
    <ul>
      {% for author in paper.authors %}
        <li><a href="/authors/{{ author.id }}">{{ author.name|e }}</a></li>
      {% endfor %}
    </ul>
  </p>
  {% if paper.doi %}
    <p>DOI: <a href="https://www.doi.org/{{paper.doi}}">{{ paper.doi }}</a></p>
  {% endif %}

  {% if paper.abstract %}
    <p>Abstract:</p>
    <p>{{ paper.abstract }}</p>
  {% endif %}

  <div>
    <a href="/papers/form/{{ paper.id }}" class="button">Edit</a>
    
    <button hx-delete="/papers/{{ paper.id }}"> Delete </button>
  </div>
</div>
{% endblock %}
