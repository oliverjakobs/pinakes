{% extends "_base.html.twig" %}

{% block title %}
  Pinakes - {{ entity }}
{% endblock %}

{% block content %}
<div class="show">
  <h1>{{ entity }}</h1>
  <div class="show-main">
    <div class="show-table">
      {% for field in fields %}
        <div>{{ field.caption }}:</div>
        <div>{% include '/component/datafield.html.twig' %}</div>
      {% endfor %}
    </div>

    {% if is_granted('ROLE_LIBRARIAN') %}
      <a class="button" href="/{{ name }}/edit/{{ entity.id }}">Edit</a>
    {% endif %}
  </div>

  {% for caption, view in content|default %}
  <div>
    <h2>{{ caption }}</h2>
    {{ view|raw }}
  </div>
  {% endfor %}

</div>
{% endblock %}
